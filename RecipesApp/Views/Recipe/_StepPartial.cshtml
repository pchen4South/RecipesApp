@model RecipesApp.Models.Step

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add a Step</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <form id="newstepForm">
                        <div class="form-group">
                            <label for="Instructions">Instructions for Step</label>
                            <input type="text" id="Instructions" class="form-control" />
                        </div>
                        @Html.HiddenFor(x => x.SortOrder)
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" id="submitStepBtn" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>
